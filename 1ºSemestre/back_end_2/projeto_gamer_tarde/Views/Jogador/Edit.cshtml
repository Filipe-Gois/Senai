@model Jogador

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/jogadores.css">

<main>
    <section class="container-grid cadastro-equipes"></section>

    @if (ViewBag.UserName == null)
    {
        <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
    }

    else
    {

        <form class="frm-cad-equipe" method="post" action='@Url.Action("Atualizar")' enctype="multipart/form-data">
            <div class="cadequipe-titulo">
                <h1>Edição de jogador</h1>
                <hr>
            </div>

            <input type="hidden" name="IdJogador" value="@ViewBag.Jogador.IdJogador">


            <select class="campo-entrada" id="equipe-select" name="IdEquipe" required>
                <option value="">Selecione uma Equipe:</option>
                @foreach (Equipe equipe in ViewBag.Equipe)
                {
                    if (equipe.IdEquipe == @ViewBag.Jogador.IdEquipe)
                    {
                        <option value="@equipe.IdEquipe">@equipe.Nome</option>
                    }
                    else
                    {
                        <option value="@equipe.IdEquipe">@equipe.Nome</option>
                    }
                }

            </select>

            <input class="campo-entrada" type="text" id="nome-jogador" placeholder="Digite o nome do Jogador:" name="Nome"
                value="@ViewBag.Jogador.Nome" required>

            <input class="campo-entrada" type="email" id="email-jogador" placeholder="Digite o Email do Jogador:"
                name="Email" value="@ViewBag.Jogador.Email" required>

            <input class="campo-entrada" type="password" id="senha" placeholder="Digite a Senha:" name="Senha"
                value="@ViewBag.Jogador.Senha" required>


            <button type="submit">Atualizar</button>




        </form>







